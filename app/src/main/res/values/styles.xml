<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="chip.choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/text_appearance.chip_choice</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipEndPadding">20dp</item>
        <item name="chipBackgroundColor">@color/selector_chip_background_color</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipCornerRadius">16.5dp</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="text_appearance.chip_choice" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
</resources>